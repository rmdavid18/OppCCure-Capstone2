@page
@model Capstonep2.Pages.Manage.Consultation.ViewDetailsModel
@{
}
<a href="~/manage/admin/Dashboard?">
    <i class="fa fa-pencil">Back</i>
</a>
<h1 class="text-center">PATIENT APPOINTMENT DETAILS</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-autos">
            <div class="card ">
                <h2>Patient</h2>

                <div class="card-body bg-mustardlite">
                    <table class="table table-striped">
                        <tr>
                            <th>Name:</th>
                            <td>@ViewData["firstname"] @ViewData["middlename"] @ViewData["lastname"]</td>
                        </tr>
                        <tr>
                            <th>Gender:</th>
                            <td>@ViewData["gender"]</td>
                        </tr>
                        <tr>
                            <th>Birthdate:</th>
                            <td>@ViewData["birthdate"]</td>
                        </tr>
                        <tr>
                            <th>Address:</th>
                            <td>@ViewData["address"]</td>
                        </tr>
                    </table>


                </div>

            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card">
        <h2>Details</h2>
        <div class="card-body bg-mustardlite">
            <div class="row">
                <label> Date And Time :</label>
            </div>

            <div class="row">
                <label>Status:</label>
            </div>
            <div class="row">
                <label>Symptoms:</label>
            </div>
            <div class="row">
                <label>Purpose Of Visit:</label>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="card">
        <h2>Consultations</h2>
        <div class="card-body bg-mustardlite">
            <div class="row">
                <label>Findings:</label>
            </div>
            <div class="row">
                <label>Descriptions:</label>
            </div>
            <div class="row">
                <label>Prescription:</label>
            </div>
            <div class="row">
                <label>Description:</label>
            </div>

        </div>

    </div>

</div>

<div class="container">

    <button class="btn btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCreate">
        Create Consultaion
    </button>

    <div class="collapse" id="collapseCreate">
        <div class="card">
            <div class="card-header">
                <p>Findings and Prescriptions</p>
            </div>
            <div class="card-body bg-mustardlite">
                <form method="Post" asp-page-handler="edit">
                    <label>Findings</label>
                    <div class="form-group justify-content-center">
                        <select class="form-control selectFinding" name="Model.View.Symptoms" multiple>
                            @{
                                if (Model.View.Findings != null && Model.View.Findings.Count() > 0)
                                {
                                    foreach (var finding in Model.View.Findings)
                                    {
                                        <option value="@finding.FName">@finding.FName</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <label>Prescription Description</label>
                    <input type="text" class="form-control" placeholder="Description" maxlength="500">



                    <label>Findings</label>
                    <div class="form-group justify-content-center w-100">
                        <select class="form-control selectGamot w-100" name="View.Purposes" multiple>
                            @{
                                if (Model.View.Gamot != null && Model.View.Gamot.Count() > 0)
                                {
                                    foreach (var gamot in Model.View.Gamot)
                                    {
                                        <option value="@gamot.GName">@gamot.GName</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <label>Finding Descriptions</label>
                    <input type="text" class="form-control" placeholder="Description" maxlength="500">

                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEdit">
        Edit Appointment
    </button>
    <div class="collapse" id="collapseEdit">
        <div class="card">
            <div class="card-header">
                <p>Edit appointment</p>
            </div>
            <div class="card-body bg-mustardlite">
                <form method="Post" asp-page-handler="edit">
                    <label>Symptoms</label>
                    <div class="form-group justify-content-center">
                        <select class="form-control selectSintomas" name="Model.View.Symptoms" multiple>
                            @{
                                if (Model.View.Sintomas != null && Model.View.Sintomas.Count() > 0)
                                {
                                    foreach (var symptom in Model.View.Sintomas)
                                    {
                                        <option value="@symptom.SName">@symptom.SName</option>
                                    }
                                }
                            }
                        </select>
                    </div>



                    <label>Purpose Of Visit</label>
                    <div class="form-group justify-content-center w-100">
                        <select class="form-control selectDahilan w-100" name="View.Purposes" multiple>
                            @{
                                if (Model.View.Dahilan != null && Model.View.Dahilan.Count() > 0)
                                {
                                    foreach (var purpose in Model.View.Dahilan)
                                    {
                                        <option value="@purpose.PName">@purpose.PName</option>
                                    }
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUpdate">
        Update Status
    </button>
    <div class="collapse" id="collapseUpdate">
        <div class="card">
            <div class="card-header">
                <p>Edit Status</p>
            </div>
            <div class="card-body bg-mustardlite">
                <form method="Post" asp-page-handler="Edit">
                    <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" id="stattus">
                            <option value="0">Pending</option>
                            <option value="1">Cancelled</option>
                            <option value="2">InProgress</option>
                            <option value="3">NoShow</option>
                            <option value="4">Completed</option>
                        </select>
                    </div>

                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>

@section Scripts{

    <script>
        $('.selectSintomas').select2({
            ajax: {
                url: '?handler=sintomas',
                data: function (params) {
                    var query = {
                        keyword: params.term,
                        page: params.page || 1
                    }
                    return query;
                },
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
            }
        });
    </script>

    <script>
        $('.selectDahilan').select2({
            ajax: {
                url: '?handler=dahilan',
                data: function (params) {
                    var query = {
                        keyword: params.term,
                        page: params.page || 1
                    }
                    return query;
                },
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
            }
        });
    </script>

    <script>
        $('.selectFinding').select2({
            ajax: {
                url: '?handler=finding',
                data: function (params) {
                    var query = {
                        keyword: params.term,
                        page: params.page || 1
                    }
                    return query;
                },
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
            }
        });
    </script>
    <script>
        $('.selectGamot').select2({
            ajax: {
                url: '?handler=gamot',
                data: function (params) {
                    var query = {
                        keyword: params.term,
                        page: params.page || 1
                    }
                    return query;
                },
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
            }
        });
    </script>
}
